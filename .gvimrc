" No audible bell
set vb

" No toolbar
set guioptions-=T

" Use console dialogs
"set guioptions+=c

" disable gui tabline
set guioptions-=e

" hide mouse after chars typed
set mousehide

" hide scrollbars
set guioptions-=r
set guioptions-=l
set guioptions-=b
set guioptions-=L
set guioptions-=R

