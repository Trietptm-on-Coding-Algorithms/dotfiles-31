#exec_always --no-startup-id xautolock -time 15 -locker "~/Tools/i3-lock.sh"

# multimedia keys

bindsym XF86AudioRaiseVolume exec "amixer -D pulse sset Master '5%+'"
bindsym XF86AudioLowerVolume exec "amixer -D pulse sset Master '5%-'"
bindsym XF86AudioMute exec "amixer -D pulse set Master toggle"
bindsym XF86AudioMicMute exec "amixer -D pulse sset Capture toggle"

# scratchpad / sticky windows

# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+F12 move scratchpad

# show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show
bindsym F12 scratchpad show

## workspace 

# set automatic back and forth
workspace_auto_back_and_forth yes

# move to left and right workspaces
bindsym $mod+Control+Left workspace prev
bindsym $mod+Control+Right workspace next
bindsym $mod+period workspace next
bindsym $mod+comma workspace prev

# move a window to the adjacent workspaces
bindsym Control+Shift+Left move container to workspace prev; workspace prev
bindsym Control+Shift+Right move container to workspace next; workspace next
bindsym $mod+Shift+period move container to workspace next; workspace next
bindsym $mod+Shift+comma move container to workspace prev; workspace prev

# use numpad for workspace switching
bindsym KP_1 workspace 1
bindsym KP_2 workspace 2
bindsym KP_3 workspace 3
bindsym KP_4 workspace 4
bindsym KP_5 workspace 5
bindsym KP_6 workspace 6
bindsym KP_7 workspace 7
bindsym KP_8 workspace 8
bindsym KP_9 workspace 9
bindsym KP_0 workspace 10

# move focused container to workspace bindsym $mod+Shift+1 move container to workspace 1
bindsym Shift+KP_1 move container to workspace 1; workspace 1
bindsym Shift+KP_2 move container to workspace 2; workspace 2
bindsym Shift+KP_3 move container to workspace 3; workspace 3
bindsym Shift+KP_4 move container to workspace 4; workspace 4
bindsym Shift+KP_5 move container to workspace 5; workspace 5
bindsym Shift+KP_6 move container to workspace 6; workspace 6
bindsym Shift+KP_7 move container to workspace 7; workspace 7
bindsym Shift+KP_8 move container to workspace 8; workspace 8
bindsym Shift+KP_9 move container to workspace 9; workspace 9
bindsym Shift+KP_0 move container to workspace 10; workspace 10

